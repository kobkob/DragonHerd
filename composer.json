{
    "name": "kobkob/dragonherd",
    "description": "WP plugin companion of BugHerd - AI-Powered Bug Task Summarizer",
    "type": "wordpress-plugin",
    "keywords": ["wordpress", "plugin", "bugherd", "ai", "openai", "bug-tracking"],
    "homepage": "https://github.com/kobkob/DragonHerd",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Ricardo Filipo",
            "email": "filipo@example.com"
        }
    ],
    "support": {
        "issues": "https://github.com/kobkob/DragonHerd/issues",
        "source": "https://github.com/kobkob/DragonHerd"
    },
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/phpstan": "^1.10",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "DragonHerd\\": "dragonherd/includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DragonHerd\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage --coverage-clover coverage/clover.xml || test $? -eq 1",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcs:fix": "phpcbf --standard=phpcs.xml",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "test:ci": "phpunit || test $? -eq 1",
        "ci": [
            "@phpcs",
            "@phpstan",
            "@test:ci"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
